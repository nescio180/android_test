<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_main"
    android:orientation="horizontal"
    android:background="@drawable/overlay_background_both_corners_rounded"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/overlay_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/overlay_button_play"
            android:text="play"
            android:shadowColor="@color/green_transparent"
            android:shadowDx="0"
            android:shadowDy="0"
            android:textSize="12sp"
            android:shadowRadius="8"
            android:textColor="@color/green_transparent"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/overlay_button_rec"
            android:text="record"
            android:textColor="@color/green_transparent"
            android:shadowColor="@color/green_transparent"
            android:shadowDx="0"
            android:textSize="12sp"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/overlay_button_exit"
        android:text="X"
        android:textSize="12sp"
        android:padding="4dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:textColor="@color/green_transparent"
        android:shadowColor="@color/green_transparent"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:background="@drawable/overlay_background_btn_exit"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</LinearLayout>